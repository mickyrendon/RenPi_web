---
interface Props{
    instagram: string;
    facebook:string;
}
const {instagram, facebook} = Astro.props
---

<nav class="flex md:flex-col-reverse justify-center w-auto gap-2 my-8">
    <a
    href="https://www.instagram.com/renpi_digital/" 
    target="_blank" 
    class="inline-flex gap-2 w-full opacity-80 border rounded-md py-1 px-3 justify-center md:px-4 transition md:flex md:w-full md:justify-start">
        <svg
        class="icon"
        width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
            <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
            <path d="M16.5 7.5l0 .01" />
        </svg>
        {instagram}
    </a>
    <a 
    href="https://web.facebook.com/profile.php?id=61551006542903" 
    target="_blank" 
    class="inline-flex gap-2 w-full opacity-80 border rounded-md py-1 px-3 justify-center md:px-4 transition md:flex md:w-full md:justify-start">
        <svg
        class="icon"
        width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentcolor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3" />
        </svg>
        {facebook}
    </a>

</nav>
<style>
    a:hover {
        /* background-image: linear-gradient(to right, rgb(56, 189, 248), rgb(59, 130, 246)); */
        background: linear-gradient(rgb(145, 200, 0), rgb(84, 148, 0), transparent);
        background-clip:text;
        color: transparent;
        border-color: rgb(145, 200, 0);
        /* border-color: rgb(59, 130, 246); */
                opacity: 1;
        transition: ease-in 200ms;
    }
    
    a:hover .icon{
        stroke:whitesmoke;
        /* stroke:rgb(59, 130, 246); */
        opacity: 0.8;
    }
</style>