---
import Button from '../Button/Button.astro';

interface Props {
    title: string;
    text: string;
    nombre: string;
    email: string;
    content: string;
}
const {title, text, nombre, email, content} = Astro.props
---
<div class="mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-4 js-scroll fade-in scrolled">{title}</h2>
    <h3 class="text-lg md:text-xl mb-8 js-scroll fade-in-bottom scrolled">{text}</h3>
    <form action="" class="p-4 max-w-md mx-auto js-scroll fade-in-bottom scrolled">
        <div class="mb-4">
            <label for="name" class="block font-semibold mb-2 text-start">{nombre}</label>
            <input id="name" type="text" class="w-full h-8 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" name="name" required>
        </div>
        <div class="mb-4">
            <label for="email" class="block font-semibold mb-2 text-start">{email}</label>
            <input id="email" type="text" class="w-full h-8 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" name="email" required>
        </div>
        <div class="mb-4" class="block font-semibold mb-2 text-start">
            <label for="msj">{content}</label>
            <textarea id="msj" class="w-full h-8 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" rows="4" name="msj"></textarea>
        </div>
    </form>
    <div>
        <Button value="EnvÃ­ar"/>
    </div>
</div>