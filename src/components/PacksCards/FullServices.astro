---
import Card from './Card.astro'
import Basic from './Basic.astro'
import Standar from './Standar.astro'
import Premium from './Premium.astro'
import Exclusive from './Exclusive.astro'
import Slider from '../Slider/Slider.astro'
import {content} from './generalContent'
import WebDev from './ServicesDescriptionCards/WebDev.astro'
import CommunityM from './ServicesDescriptionCards/CommunityM.astro'
import ExclusiveCard from './ServicesDescriptionCards/Exclusive.astro'
---

<article class="py-12 w-full grid place-items-center">
    <div class="grid place-items-center gap-8 sm:w-3/5 px-4 md:grid-cols-2 md:w-10/12">
        {
            content?.map((item) => (
                item.basic?
                    <Card title={item.basic.title}>
                        <Basic slot="list"/>
                    </Card>
                :null
            ))
        }
        <div class="w-full">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-8 js-scroll fade-in">Fotograf√≠a</h2>
            <Slider>
            
        </div>
    </div>
</article>
<article class="py-12 w-full grid place-items-center bg-gray-100">
    <div class="grid place-items-center gap-8 sm:w-3/5 px-4 md:grid-cols-2 md:w-10/12">
        <WebDev/>
        {
            content?.map((item) => (
                item.standar?
                    <Card title={item.standar.title}>
                        <Standar slot="list"/>
                    </Card>
                :null
            ))
        }
    </div>
</article>
<article class="py-12 w-full grid place-items-center">
    <div class="grid place-items-center gap-8 sm:w-3/5 flex-row-reverse px-4 md:grid-cols-2 md:w-10/12">
        {
            content?.map((item) => (
                item.premium?
                    <Card title={item.premium.title}>
                        <Premium slot="list"/>
                    </Card>
                :null
            ))
        }
        <CommunityM/>
    </div>
</article>
<article class="py-12 w-full grid place-items-center bg-gray-100">
    <div class="grid place-items-center gap-8 sm:w-3/5 flex-row-reverse px-4 md:grid-cols-2 md:w-10/12">
        <ExclusiveCard/>
        {
            content?.map((item) => (
                item.exclusive?
                    <Card title={item.exclusive.title}>
                        <Exclusive slot="list"/>
                    </Card>
                :null
            ))
        }
    </div>
</article>