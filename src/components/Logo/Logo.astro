---
interface Props {
    description: string;
}
const {description} = Astro.props
---

<figure class="logo flex flex-col items-center pt-8 md:pt-0 js-scroll scrolled fade-in">
    <img 
    src="/assets/logotipo/logoWhite.webp"
    alt="renpi-logo"
    class="w-60 md:w-80"
    >
    <figcaption class="text-sm  font-semibold opacity-80 w-60 md:w-80 md:text-xl text-current text-center">
        {description}
    </figcaption>
</figure>
