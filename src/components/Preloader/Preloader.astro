---
import Logo from '../Logo/Logo.astro'
---

<div class="preloader w-screen h-screen fixed top-0 z-30 bg-gradient-to-l from-gray-700 via-gray-900 to-black overflow-hidden animate__animated">
    <div class="w-full h-full grid place-items-center text-white">
        <Logo description="AGENCIA DIGITAL"/>
    </div>
</div>

<script>
    globalThis.addEventListener('load', async () => {
        const { deleteLoader } = await import('./preloader')
        return deleteLoader()
    })
</script>