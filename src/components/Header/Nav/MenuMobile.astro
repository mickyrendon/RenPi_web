---
import SocialMediaBtns from "../../Footer/SocialMediaBtns.astro";
import Logo from "../../Logo/Logo.astro";

interface Props{
    nosotros:string;
    planes:string;
    servicios:string;
    contacto:string;
}
const {nosotros,planes, servicios, contacto} = Astro.props
---

<div 
class="menu-mobile hidden p-8 w-full h-screen max-h-max fixed top-16 z-40 bg-gradient-to-l from-gray-700 via-gray-900 to-black"
>
    <ul class="menu-mobile-list">
        <li>
            <a href="#nosotros">
                {nosotros}
            </a>
        </li>
        <li>
            <a href="#servicios">
                {planes}
            </a>
        </li>
        <li>
            <a href="#metodologia">
                {servicios}
            </a>
        </li>
        <li>
            <a href="#contacto">
                {contacto}
            </a>
        </li>
    </ul>
    <div class="px-16 fixed bottom-[40px] left-0 flex flex-col-reverse justify-center text-white w-full">
        <div class="opacity-80">
            <Logo 
            description="potenciando tu presencia en lÃ­nea"
            />
        </div>
        <SocialMediaBtns/
        instagram="@renpi_digital"
        facebook="RenPi"
        >
    </div>
</div>
<style>
    .menu-mobile{
        animation: fadeIn 0.3s ease-in-out;
    }
    .menu-mobile.hidde{
        animation: fadeOut 0.3s ease-in-out;
    }
    .menu-mobile ul li a{
    margin:1rem 0;
    width: 100%;
    display: inline-block;
    text-align: center;
    color: white;
    }
</style>