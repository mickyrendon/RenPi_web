---
import MenuMobile from "./MenuMobile.astro"
interface Props{
    nosotros:string;
    planes:string;
    servicios:string;
    contacto:string;
}
const {nosotros,planes, servicios, contacto} = Astro.props

---

<nav class="p-4 md:px-8 fixed top-0 z-10 w-full flex justify-between bg-gradient-to-l from-gray-700 via-gray-900 to-black text-white">
    <a href="#">
    	<img src="/assets/logotipo/logotipo-circle.svg" alt="logo" slot="logo" class="w-8 h-8">
    </a>

    <ul class="hidden menu-desktop md:w-auto md:flex md:justify-between md:items-center md:gap-8">
        <li>
            <a href="#nosotros">
                {nosotros}
            </a>
        </li>
        <li>
            <a href="#planes">
                {planes}
            </a>
        </li>
        <li>
            <a href="#servicios">
                {servicios}
            </a>
        </li>
        <li>
            <a href="#contacto">
                {contacto}
            </a>
        </li>
    </ul>
    <!--TODO, checkear que funcione onclick=`${menuEvent(e)}` -->
    <button 
    id="menu-mobile-btn"
    class="menu-btn w-8 h-8 block bg-center bg-no-repeat bg-contain md:hidden lg:hidden transition-all" 
    ></button>
</nav>
<MenuMobile
nosotros="Nosotros"
planes="Planes"
servicios="Servicios"
contacto="Contacto"
/>
<script>
    import {menuEvent} from "./menuMobile"

    const body = document.querySelector('body')
    body.addEventListener('click', menuEvent, false)
</script>
<style>
    .menu-btn{
        background-image: url('/assets/menu-rollup.svg');
        /* background-image: url('../../../../public/assets/menu-rollup.svg'); */
    }
    .menu-btn--down{
        background-image: url('/assets/menu-dropdown.svg');
        /* background-image: url('../../../../public/assets/menu-dropdown.svg'); */
    }
    .menu-desktop a{
        transition: ease-out 700ms;
    }
    .menu-desktop a:hover{
        /* opacity: 0.9; */
        background-image: linear-gradient(to right, rgb(56, 189, 248), rgb(59, 130, 246));
        /* linear-gradient(to right, rgb(249, 168, 212), rgb(216, 180, 254), rgb(129, 140, 248)); */
        background-clip:text;
        color: transparent;
        transition: ease-in 200ms;
    }
</style>

