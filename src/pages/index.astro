---
import Layout from "../layout/Layout.astro";
import Preloader from "../components/Preloader/Preloader.astro";
import Nav from "../components/Header/Nav/Nav.astro";
import Video from "../components/Header/Video.astro";
import Us from "../components/UsSection/Us.astro";
import Card from "../components/PacksCards/Card.astro";
import FullServices from "../components/PacksCards/FullServices.astro";
// import Slider from "../components/Slider/Slider.astro";
import Exclusive from "../components/PacksCards/Exclusive.astro";
import Metodology from "../components/Metodology/Metodology.astro";
import Form from "../components/Form/Form.astro";
import Footer from "../components/Footer/Footer.astro"
// import Basic from "../components/PacksCards/Basic.astro";
import Chat from "../components/ChatBtn.astro"
// import Premium from "../components/PacksCards/Premium.astro";
// import Standar from "../components/PacksCards/Standar.astro";
import {content} from '../components/PacksCards/generalContent'
import MediumCardsServices from "../components/PacksCards/MediumCardsServices.astro";

---
<Layout>
	<Preloader/>
	<header class="mt-[64px]">
		<Nav 
		nosotros="Nosotros"
		servicios="Servicios"
		metodologia="Metodología"
		contacto="Contacto"
		nosotrosUrl="#nosotros"
		serviciosUrl="#servicios"
		metodologiaUrl="#metodologia"
		contactoUrl="#contacto"
		>
		</Nav>
		<Video/>
	</header>
	<main>
		<!-- FIXME, padding card fotografia -->
		<Chat/>
		<Us id="nosotros"/>
		<section id="servicios" class="bg-white text-black pt-24 grid gap-24 place-items-center">
			<div class="plan-container w-full">
				<div class="grid place-items-center w-full mb-8 md:mb-16">
					<h2 class="text-3xl md:text-4xl font-bold text-centerjs-scroll mb-2 fade-in">Nuestros Servicios</h2>
					<p class="text-base md:text-xl font-medium text-center text-black  js-scroll fade-in opacity-60">
						Soluciones que te ayudaran a lograr tus objetivos en línea
					</p>
				</div>
				<div class="md:block lg:hidden">
					<MediumCardsServices/>
				</div>
				<div class="hidden lg:block">
					<FullServices/>
				</div>
			</div>
			<article class="py-12 w-full grid place-items-center bg-gray-100">
				<div class="grid place-items-center gap-8 sm:w-3/5 px-4 md:grid-cols-2 md:w-10/12">
					<div class="exclusive-txt-content">
						<h2 class="text-3xl md:text-4xl font-bold text-center mb-8 js-scroll   fade-in">Exclusive</h2>
						<p class="max-w-3xl text-center js-scroll   fade-in-bottom text-pretty text-[#030508] md:text-start">El servicio de paquete exclusivo ofrece una experiencia única y personalizada para tus necesidades comerciales. Con un enfoque centrado en el cliente, nuestro equipo de expertos trabajará contigo para diseñar estrategias digitales específicas que impulsen el éxito de tu negocio. Este paquete exclusivo está diseñado para adaptarse a tus necesidades y presupuesto, brindándote una solución integral y efectiva para impulsar tu presencia en línea.</p>
					</div>
					{
						content?.map((item) => (
							item.exclusive?
								<Card title={item.exclusive.title}>
									<Exclusive slot="list"/>
								</Card>
							:null
						))
					}
				</div>
			</article>
		</section>
		<section id="metodologia" class="services-section bg-gradient-to-l from-gray-700 via-gray-900 to-black text-white py-16">
			<Metodology
			sectionTitle="Descubre cómo trabajamos"
			paragraph="Diseño digital a la medida de tus necesidades"
			/>
		</section>
		<section id="contacto" class="pt-12">
			<Form
			title="¡Contacta con nosotros!"
			text="Estamos listos para ayudarte a lograr tus objetivos digitales."
			/>
		</section>
		<footer class="md:pt-16">
			<Footer/>
		</footer>
	</main>
</Layout>