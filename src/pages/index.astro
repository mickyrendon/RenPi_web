---
import Layout from "../layout/Layout.astro";
import Nav from "../components/Header/Nav/Nav.astro";
import Video from "../components/Header/Video.astro";
import Us from "../components/UsSection/Us.astro";
import Card from "../components/PacksCards/Card.astro";
import ServicesCards from "../components/ServicesCards/ServicesCards.astro";
import Form from "../components/Form/Form.astro";
import Footer from "../components/Footer/Footer.astro"
import {content} from '../components/PacksCards/content'


---
<Layout>
	<header>
		<Nav 
		nosotros="Nosotros"
		planes="Planes"
		servicios="Servicios"
		contacto="Contacto"
		>
		</Nav>
		<Video/>
	</header>
	<main>
		<Us id="nosotros"/>
		<section id="planes">
			{
				//FIXME, solucionar el render de los items
				
				content?.map((item) => (
					// console.log(item.basic)
					item.basic? <Card title={item.basic.title} item={item.basic.items}/>:console.log('test')
					
					
						
				))
			}
		</section>
		<section id="servicios" class="services-section bg-gradient-to-l from-gray-700 via-gray-900 to-black text-white py-16">
		<ServicesCards
		sectionTitle="Nuestros Servicios"
		/>
		</section>
		<section id="contacto">
			<Form
			title="Â¡Contacta con nosotros!"
			text="Estamos listos para ayudarte a lograr tus objetivos digitales."
			nombre="Nombre"
			email="Email"
			content="Mensaje"
			/>
		</section>
		<footer>
			<Footer/>
		</footer>
	</main>
</Layout>
